{
  "name": "sophia-intelligence-dns-infrastructure",
  "version": "1.0.0",
  "description": "DNS infrastructure management for Sophia Intelligence Platform using Pulumi and Namecheap API",
  "main": "sophia-dns-infrastructure.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "npm run build && pulumi up --yes",
    "preview": "npm run build && pulumi preview",
    "destroy": "npm run build && pulumi destroy --yes",
    "validate": "npm run build && node dist/validate-dns.js",
    "health-check": "npm run build && node dist/health-check.js",
    "setup": "npm install && npm run build",
    "test": "npm run build && npm run validate && npm run health-check"
  },
  "keywords": [
    "sophia",
    "ai",
    "dns",
    "infrastructure",
    "pulumi",
    "namecheap",
    "automation"
  ],
  "author": "Sophia AI Team",
  "license": "MIT",
  "dependencies": {
    "@pulumi/pulumi": "^3.95.0",
    "@pulumi/aws": "^6.15.0",
    "@pulumi/awsx": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-cherry/sophia-main.git",
    "directory": "infrastructure/dns"
  },
  "pulumi": {
    "name": "sophia-intelligence-platform",
    "description": "DNS infrastructure for Sophia Intelligence Platform",
    "runtime": "nodejs"
  }
} 