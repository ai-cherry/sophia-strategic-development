{
  "name": "sophia-ai-production",
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://sophia-ai-backend.sophia-intel.ai",
    "REACT_APP_ENVIRONMENT": "production",
    "REACT_APP_VERSION": "2.0.0",
    "REACT_APP_APP_NAME": "Sophia AI Production",
    "ENVIRONMENT": "prod",
    "SNOWFLAKE_ACCOUNT": "@modern_stack-account",
    "SNOWFLAKE_USER": "@modern_stack-user",
    "SNOWFLAKE_PRIVATE_KEY_PASSPHRASE": "@modern_stack-passphrase",
    "REDIS_URL": "@redis-url",
    "OPENAI_API_KEY": "@openai-api-key",
    "ANTHROPIC_API_KEY": "@anthropic-api-key"
  },
  "build": {
    "env": {
      "REACT_APP_BACKEND_URL": "https://sophia-ai-backend.sophia-intel.ai",
      "REACT_APP_ENVIRONMENT": "production"
    }
  },
  "functions": {
    "api/*.py": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "python3.12"
    }
  }
}