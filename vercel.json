{
  "version": 2,
  "name": "sophia-ai",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.sophia-intel.ai/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.sophia-intel.ai",
    "NEXT_PUBLIC_WS_URL": "wss://ws.sophia-intel.ai"
  }
}
