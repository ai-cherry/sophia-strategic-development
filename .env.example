VITE_WS_URL=wss://sophia-ai-platform.vercel.app/ws
VITE_ENVIRONMENT=production
VITE_API_KEY=your-frontend-api-key
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# =============================================================================
# N8N WORKFLOW AUTOMATION
# =============================================================================
N8N_WEBHOOK_URL=https://sophia-ai-platform.vercel.app/api/n8n/webhook
N8N_API_KEY=your-n8n-api-key
N8N_ENCRYPTION_KEY=your-n8n-encryption-key

# =============================================================================
# ADDITIONAL SERVICES
# =============================================================================
# HuggingFace
HUGGINGFACE_API_TOKEN=your-huggingface-token

# PhantomBuster
PHANTOM_BUSTER_API_KEY=your-phantombuster-api-key

# Twingly
TWINGLY_API_KEY=your-twingly-api-key

# Tavily
TAVILY_API_KEY=your-tavily-api-key

# ZenRows
ZENROWS_API_KEY=your-zenrows-api-key

# Apify
APIFY_API_TOKEN=your-apify-token

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Async settings
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,Cache-Control,X-API-Key

# Session
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Encryption
ENCRYPTION_ALGORITHM=AES-256-GCM
HASH_ALGORITHM=SHA-256
