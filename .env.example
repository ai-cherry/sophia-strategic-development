# Sophia AI Platform Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
SOPHIA_ENV=production
SOPHIA_VERSION=2.1.0
DEBUG=false
LOG_LEVEL=INFO
PLATFORM=vercel

# =============================================================================
# API CONFIGURATION
# =============================================================================
SOPHIA_API_URL=https://sophia-ai-platform.vercel.app
SOPHIA_API_KEY=your-sophia-api-key-here
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sophia_ai
POSTGRES_USER=sophia
POSTGRES_PASSWORD=your-postgres-password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# VECTOR DATABASES
# =============================================================================
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=sophia-ai-index

# Weaviate
WEAVIATE_URL=https://your-weaviate-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# AI MODEL PROVIDERS
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241119

# Portkey AI
PORTKEY_API_KEY=your-portkey-api-key
PORTKEY_CONFIG=your-portkey-config-id

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key

# Together AI
TOGETHER_AI_API_KEY=your-together-ai-api-key

# =============================================================================
# DATA WAREHOUSE & ANALYTICS
