{
  "threshold": 0,
  "reporters": [
    "json"
  ],
  "ignore": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.venv/**",
    "**/venv/**",
    "**/test_env/**",
    "**/external/**",
    "**/archive/**",
    "**/cleanup_backup*/**",
    "**/docs_backup*/**",
    "**/sophia-deployment*/**",
    "**/reports/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/dist/**",
    "**/build/**",
    "**/__pycache__/**",
    "**/*.pyc",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/uv.lock",
    "**/*.log",
    "**/*.pdf",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.ico",
    "**/*.svg"
  ],
  "minLines": 30,
  "minTokens": 50,
  "output": "./reports",
  "silent": true,
  "maxSize": "100kb",
  "formatsExts": {
    "python": [
      ".py"
    ],
    "javascript": [
      ".js",
      ".jsx"
    ],
    "typescript": [
      ".ts",
      ".tsx"
    ],
    "json": [
      ".json"
    ],
    "yaml": [
      ".yml",
      ".yaml"
    ],
    "markdown": [
      ".md"
    ]
  }
}