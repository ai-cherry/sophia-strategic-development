{
  "mcpServers": {
    "n8n_gateway": {
      "command": "python",
      "args": [
        "n8n-integration/n8n_mcp_gateway.py"
      ],
      "env": {
        "ENVIRONMENT": "prod",
        "PULUMI_ORG": "scoobyjava-org",
        "PYTHONPATH": "."
      },
      "disabled": false,
      "alwaysAllow": [
        "*"
      ],
      "initializationOptions": {
        "auto_start": true,
        "health_check_url": "http://localhost:8100/health"
      }
    },
    "snowflake_unified": {
      "command": "python",
      "args": [
        "mcp-servers/snowflake_unified/unified_snowflake_server.py"
      ],
      "env": {
        "PORT": "9030"
      }
    },
    "slack_unified": {
      "command": "python",
      "args": [
        "mcp-servers/slack_unified/slack_integration_server.py"
      ],
      "env": {
        "PORT": "9031"
      }
    },
    "sophia_intelligence_unified": {
      "command": "python",
      "args": [
        "mcp-servers/sophia_intelligence_unified/unified_sophia_intelligence_server.py"
      ],
      "env": {
        "PORT": "9032"
      }
    },
    "hubspot_unified": {
      "command": "python",
      "args": [
        "mcp-servers/hubspot_unified/hubspot_server.py"
      ],
      "env": {
        "PORT": "9033"
      }
    },
    "ai_memory": {
      "command": "uvicorn",
      "args": [
        "mcp-servers.ai_memory.ai_memory_mcp_server:app",
        "--host", "0.0.0.0",
        "--port", "9000"
      ],
      "auto_trigger": {
        "enabled": true,
        "patterns": ["remember", "recall", "store memory", "what did we", "last time"],
        "priority": "HIGH"
      }
    },
    "mem0_openmemory": {
      "command": "curl",
      "args": [
        "-X", "POST",
        "http://mem0.sophia-lambda.svc:8080/",
        "-H", "Content-Type: application/json"
      ],
      "remote": true,
      "endpoint": "http://mem0.sophia-lambda.svc:8080",
      "auto_trigger": {
        "enabled": true,
        "patterns": ["persistent memory", "cross-session", "remember across", "mem0"],
        "priority": "HIGH"
      }
    },
    "cortex_aisql": {
      "command": "curl",
      "args": [
        "-X", "POST",
        "http://cortex-aisql-service.sophia-ai.svc:8080/",
        "-H", "Content-Type: application/json"
      ],
      "remote": true,
      "endpoint": "http://cortex-aisql-service.sophia-ai.svc:8080",
      "auto_trigger": {
        "enabled": true,
        "patterns": ["natural language query", "ask snowflake", "cortex ai", "business data"],
        "priority": "HIGH"
      }
    },
    "codacy": {
    }
  },
  "version": "4.0-phoenix",
  "description": "Cursor IDE MCP Configuration - Unified N8N Gateway",
  "last_updated": "2024-07-02T12:00:00.000000Z"
}