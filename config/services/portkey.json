{
  "default_provider": "openrouter",
  "virtual_key": "sophia-ai-key",
  "base_url": "https://api.portkey.ai/v1",
  "routing_rules": [
    {
      "temperature": ">0.7",
      "route_to": "openrouter/mixtral"
    },
    {
      "temperature": "<=0.3",
      "route_to": "claude-3-5-sonnet-20241022"
    },
    {
      "task": "code_review",
      "route_to": "claude-3-5-sonnet-20241022"
    },
    {
      "task": "creative",
      "route_to": "openrouter/mixtral"
    },
    {
      "task": "code_generation",
      "route_to": "claude-3-5-sonnet-20241022"
    },
    {
      "task": "analysis",
      "route_to": "claude-3-5-sonnet-20241022"
    }
  ],
  "guardrails": {
    "input_checks": [
      "length < 10000"
    ],
    "output_checks": [
      "no_pii",
      "professional_tone"
    ]
  },
  "fallback_providers": [
    "claude-3-5-sonnet-20241022",
    "gpt-4",
    "openrouter/mixtral"
  ]
}