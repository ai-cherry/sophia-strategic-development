{
  "dashboard": {
    "title": "UnifiedLLMService Metrics",
    "uid": "unified-llm-metrics",
    "tags": ["llm", "ai", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "title": "LLM Request Rate by Provider",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(llm_requests_total[5m])",
            "legendFormat": "{{provider}} - {{model}}"
          }
        ]
      },
      {
        "title": "LLM Request Latency (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(llm_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{provider}} - {{model}}"
          }
        ]
      },
      {
        "title": "Cost per Hour by Provider",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(llm_cost_per_request_usd_sum[1h])) by (provider)",
            "legendFormat": "{{provider}}"
          }
        ]
      },
      {
        "title": "Cache Hit Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(llm_cache_hits_total[5m])) / sum(rate(llm_requests_total[5m])) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "Data Movement Avoided (GB)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(data_movement_avoided_kb) / 1024 / 1024",
            "legendFormat": "GB Saved"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "title": "Error Rate by Provider",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(llm_requests_total{status=\"error\"}[5m])",
            "legendFormat": "{{provider}} - {{model}}"
          }
        ]
      },
      {
        "title": "Task Type Distribution",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(llm_requests_total) by (task_type)",
            "legendFormat": "{{task_type}}"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "provider",
          "type": "query",
          "query": "label_values(llm_requests_total, provider)",
          "multi": true,
          "includeAll": true
        },
        {
          "name": "model",
          "type": "query",
          "query": "label_values(llm_requests_total, model)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "llm_requests_total{status=\"error\"}",
          "name": "LLM Errors"
        }
      ]
    }
  }
} 