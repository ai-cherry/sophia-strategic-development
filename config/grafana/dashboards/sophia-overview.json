dashboard:
  id: null
  panels:
  - gridPos:
      h: 8
      w: 12
      x: 0
      y: 0
    id: 1
    targets:
    - expr: up
      legendFormat: '{{instance}}'
    title: System Health
    type: stat
  - gridPos:
      h: 8
      w: 12
      x: 12
      y: 0
    id: 2
    targets:
    - expr: http_request_duration_seconds
      legendFormat: '{{method}} {{endpoint}}'
    title: Response Time
    type: graph
  refresh: 30s
  tags:
  - sophia-ai
  - production
  time:
    from: now-1h
    to: now
  timezone: browser
  title: Sophia AI System Overview
