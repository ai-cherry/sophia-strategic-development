#!/bin/bash
# Sophia AI Virtual Environment Auto-Activation
# This file automatically activates the Python virtual environment when you enter this directory

# Check if virtual environment exists
if [[ -f ".venv/bin/activate" ]]; then
    echo "üîÑ Activating Sophia AI virtual environment..."
    source .venv/bin/activate
    echo "‚úÖ Virtual environment activated: $(which python)"
    echo "üß† Welcome to Sophia AI development workspace!"
else
    echo "‚ö†Ô∏è  Virtual environment not found at .venv/"
    echo "üí° Run: python -m venv .venv && source .venv/bin/activate && uv sync"
fi

# Export project-specific environment variables
export PYTHONPATH="${PYTHONPATH}:$(pwd)"
export SOPHIA_PROJECT_ROOT="$(pwd)"
export LOG_LEVEL="INFO"

# Ensure we're using the venv Python for all operations
export PATH="$(pwd)/.venv/bin:$PATH"
