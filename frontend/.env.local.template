# Sophia AI Frontend - Local Development Environment Variables
# Copy this file to .env.local and update values as needed

# API Configuration
REACT_APP_API_URL=https://api.dev.sophia.payready.com
REACT_APP_WS_URL=wss://api.dev.sophia.payready.com/ws
REACT_APP_ENVIRONMENT=development

# Optional: API Key for development
REACT_APP_API_KEY=sophia-dashboard-dev-key

# Optional: Debug flags
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Note: For production deployments, these variables are set automatically
