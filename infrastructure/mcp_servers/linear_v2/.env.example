# Linear_V2 MCP Server Environment Variables

# Server Configuration
LINEAR_V2_PORT=9001
LINEAR_V2_LOG_LEVEL=INFO

# API Configuration
LINEAR_V2_API_KEY=your_api_key_here
LINEAR_V2_API_BASE_URL=https://api.linear_v2.com/v1

# Database Configuration (optional)
LINEAR_V2_DB_DSN=postgresql+asyncpg://user:pass@localhost:5432/linear_v2_db

# Feature Flags
LINEAR_V2_ENABLE_AI_PROCESSING=true
LINEAR_V2_ENABLE_METRICS=true
