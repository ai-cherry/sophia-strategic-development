    "config:set": "pulumi config set",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@pulumi/pulumi": "^3.90.1",
    "@pulumi/aws": "^6.10.0",
    "@pulumi/kubernetes": "^4.4.0",
