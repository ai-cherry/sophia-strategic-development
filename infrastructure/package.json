    "@pulumi/github": "^5.21.0",
    "@pulumiverse/vercel": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "pulumi",
    "infrastructure",
    "typescript",
    "aws",
    "kubernetes",
    "vercel",
    "sophia-ai"
  ],
  "author": "Sophia AI Platform Team",
