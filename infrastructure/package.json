{
  "name": "sophia-ai-infrastructure",
  "version": "2.0.0",
  "description": "Sophia AI Platform - Infrastructure as Code with TypeScript Pulumi",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "pulumi up",
    "destroy": "pulumi destroy",
    "preview": "pulumi preview",
