FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ssh \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend core modules
COPY backend/core/ /app/backend/core/
COPY backend/services/ /app/backend/services/
COPY backend/security/ /app/backend/security/

# Copy autonomous agents modules
COPY autonomous-agents/ /app/autonomous-agents/

# Set environment variables
ENV PYTHONPATH=/app
ENV AGENT_TYPE=lambda-labs-autonomous

# Create non-root user with SSH capabilities
RUN useradd -m -u 1000 agent && \
    mkdir -p /home/agent/.ssh && \
    chown -R agent:agent /app /home/agent/.ssh

USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8082/health || exit 1

# Expose ports
EXPOSE 8000 8082

# Run the autonomous agent
CMD ["python", "-m", "autonomous-agents.infrastructure.lambda_labs_autonomous"]
