FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend core modules
COPY backend/core/ /app/backend/core/
COPY backend/services/ /app/backend/services/
COPY backend/security/ /app/backend/security/

# Copy autonomous agents modules
COPY autonomous-agents/ /app/autonomous-agents/

# Set environment variables
ENV PYTHONPATH=/app
ENV AGENT_TYPE=self-healing-orchestrator

# Create non-root user
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Expose ports
EXPOSE 8000 8080

# Run the orchestrator
CMD ["python", "-m", "autonomous-agents.orchestration.self_healing_system"]
