FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend core modules
COPY backend/core/ /app/backend/core/
COPY backend/services/ /app/backend/services/

# Copy autonomous agents modules
COPY autonomous-agents/ /app/autonomous-agents/

# Set environment variables
ENV PYTHONPATH=/app
ENV AGENT_TYPE=qdrant-optimizer

# Create non-root user
RUN useradd -m -u 1000 agent && \
    mkdir -p /cache /configs && \
    chown -R agent:agent /app /cache /configs
USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8083/health || exit 1

# Expose ports
EXPOSE 8000 8083

# Run the optimizer
CMD ["python", "-m", "autonomous-agents.infrastructure.qdrant_optimizer"]
