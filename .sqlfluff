[sqlfluff]
# Snowflake-specific configuration for Sophia AI
dialect = snowflake
templater = jinja
sql_file_exts = .sql,.SQL
max_line_length = 120
indent_unit = space
tab_space_size = 4
large_file_skip_byte_limit = 50000

[sqlfluff:indentation]
indented_joins = true
indented_ctes = true
indented_using_on = true
template_blocks_indent = true

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing

[sqlfluff:rules]
# Allow Snowflake-specific syntax
allow_scalar = true
single_table_references = consistent
unquoted_identifiers_policy = all

# Disable overly strict ANSI compliance rules for Snowflake
sqlfluff.rules.LT05 = disabled  # Line too long
sqlfluff.rules.CP01 = disabled  # Inconsistent capitalisation
sqlfluff.rules.AL01 = disabled  # Implicit aliasing
sqlfluff.rules.AL02 = disabled  # Implicit aliasing
sqlfluff.rules.ST06 = disabled  # Select wildcards

# Allow Snowflake-specific features
[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.literals]
capitalisation_policy = upper

# Snowflake-specific exclusions
[sqlfluff:rules:structure.subquery]
forbid_subquery_in = both

# Allow Snowflake syntax patterns
[sqlfluff:templater:jinja]
apply_dbt_builtins = false

# Custom rules for Snowflake
[sqlfluff:rules:references.from]
force_enable = false

