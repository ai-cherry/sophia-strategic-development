        if call_data.get("duration", 0) < 300:  # Less than 5 minutes
            opportunities.append("Call duration was short - consider longer discovery")

        talk_ratio = self._calculate_talk_ratio(call_data)
        if talk_ratio > 0.7:
            opportunities.append(
