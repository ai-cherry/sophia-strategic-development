# Sophia AI FastAPI Backend Environment Configuration

# Application Settings
SOPHIA_APP_NAME="Sophia AI Platform"
SOPHIA_APP_VERSION="2.0.0"
SOPHIA_DEBUG=false
SOPHIA_ENVIRONMENT="production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# CORS Settings
ALLOWED_ORIGINS="*"
ALLOWED_METHODS="*"
ALLOWED_HEADERS="*"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=10

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services (Optional - for Sophia AI integration)
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""
# SNOWFLAKE_ACCOUNT=""
# PINECONE_API_KEY=""

# Pulumi ESC Integration
# PULUMI_ORG="scoobyjava-org"
# PULUMI_ACCESS_TOKEN=""

# Development/Testing
DEV_MODE=false
MOCK_AI_RESPONSES=false 